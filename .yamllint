---

yaml_files:
  - '*.yaml'
  - '*.yml'

rules:
  line-length:
    max: 140
    level: warning
    allow-non-breakable-inline-mappings: true
  braces:
    level: warning
    max-spaces-inside: 1
  brackets:
    level: warning
    max-spaces-inside: 1
  colons:
    level: warning
  commas:
    level: warning
  comments: disable
  comments-indentation: disable
  document-start: disable
  empty-lines:
    level: warning
  hyphens:
    level: warning
  indentation:
    level: warning
    indent-sequences: consistent
  truthy: enable
  new-line-at-end-of-file: enable